{
    "id": "io.github.tcobbs.LDView",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-24.08",
    "sdk": "org.kde.Sdk",
    "command": "LDView",
    "rename-desktop-file": "ldview.desktop",
    "rename-mime-file": "ldraw.xml",
    "rename-mime-icons": [
        "gnome-mime-application-x-ldraw",
        "gnome-mime-application-x-multipart-ldraw"
    ],
    "rename-icon": "LDViewIcon128",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--device=dri",
        "--filesystem=xdg-documents",
        "--env=TMPDIR=/var/tmp",
        "--env=LDRAWDIR=/app/share/ldraw"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/ldraw/mklist.exe",
        "*.a",
        "*.la"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        {
            "name": "ldraw",
            "buildsystem": "simple",
            "build-commands": [
                "install -d ${FLATPAK_DEST}/share/",
                "unzip -d ${FLATPAK_DEST}/share/ library.bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/leozide/leocad/releases/download/v23.03/Library-23.06.zip",
                    "sha256": "ef29c1e0fc989c9e9894072f43ae0030a5274c0cdcc831bc6c206bbe059f449b"
                }
            ]
        },
        {
            "name": "minizip",
            "subdir": "contrib/minizip",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://zlib.net/zlib-1.3.1.tar.gz",
                    "sha256": "9a93b2b7dfdac77ceba5a558a580e74667dd6fede4585b91eefb60f03b72df23",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 5303,
                        "stable-only": true,
                        "url-template": "https://zlib.net/zlib-$version.tar.gz"
                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "cd contrib/minizip && autoreconf -ifv"
                    ]
                }
            ]
        },
        {
            "name": "ldview",
            "buildsystem": "simple",
            "build-commands": [
                "make -j${FLATPAK_BUILDER_N_JOBS}",
                "make install"
            ],
            "build-options": {
                "ldflags": "-L${FLATPAK_DEST}/lib",
                "env": {
                    "PREFIX": "${FLATPAK_DEST}"
                }
            },
            "cleanup": [
            ],
            "post-install": [
                "install -Dm644 -t ${FLATPAK_DEST}/share/icons/hicolor/128x128/apps ./QT/images/LDViewIcon128.png",
                "install -Dm644 -t ${FLATPAK_DEST}/share/metainfo QT/desktop/io.github.tcobbs.LDView.metainfo.xml",
                "install -Dm644 -t ${FLATPAK_DEST}/share/licenses/ldview license.txt license2.txt"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/tcobbs/ldview.git",
                    "tag": "v4.6",
                    "commit": "70b11905e8b5f9b5c5a8946b4d73a41217e86916"
                },
                {
                    "type": "patch",
                    "path": "ldview-build.patch"
                }
            ]
        }
    ]
}
